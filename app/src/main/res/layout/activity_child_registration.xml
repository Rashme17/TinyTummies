<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child Registration"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/editTextChildName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Child Name" />

        <EditText
            android:id="@+id/editTextChildAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Child Age"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextChildWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Weight (kg)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextChildHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Height (cm)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextParentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parent/Guardian Name" />

        <Button
            android:id="@+id/buttonRegisterChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register" />
    </LinearLayout>
</ScrollView>
