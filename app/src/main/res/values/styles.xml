<resources>

    <!-- Base application theme -->
    <style name="Theme.TinyTummies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/baby_pink</item> <!-- Set baby pink background -->
        <item name="colorPrimary">@color/dark_pink</item> <!-- Dark pink controls -->
        <item name="colorPrimaryVariant">@color/dark_pink</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/dark_pink</item>
        <item name="colorOnSecondary">@android:color/white</item>
    </style>

    <!-- Button style -->
    <style name="Widget.MyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/dark_pink</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>

